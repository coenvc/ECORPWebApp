@using EcoRP.Models
@model EcoRP.Models.CustomerProfileViewModel

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xs-offset-0 col-sm-offset-0 toppad">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Customer.Name @Model.Customer.Surname</h3>
                </div>
                <div class="container">
                    <div class="panel-body">
                        <div class="row">
                            <div class=" col-md-12 col-lg-9 ">
                                <table class="table borderless">
                                    <tbody>
                                        <tr>
                                            <td>Test:</td>
                                            <td>Test</td>
                                        </tr>
                                        <tr>
                                        <tr>
                                            <td>Email</td>
                                            <td><a href="mailto:@Model.Customer.Email">@Model.Customer.Email</a></td>
                                        </tr>
                                    <td>Phone Number</td>
                                    <td>
                                        @Model.Customer.Telefoonnummer
                                    </td>

                                    </tr>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="container">
                            <div class="row">

                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                                    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
                                    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="home">
                                        <table>
                                            <tr>
                                                <td>Hire date:</td>
                                                <td>06/23/2013</td>
                                            </tr>
                                            <tr>
                                                <td>Salary</td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>Home Address</td>
                                                <td></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="profile">...</div>
                                    <div role="tabpanel" class="tab-pane" id="messages">
                                        <ul>@foreach (Appointment appointment in Model.Appointments)
                                        {
                                            <li>@Html.ActionLink(appointment.ToString(),"Details","Appointment",new {id = appointment.Id},null)</li>
                                        }</ul>  
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="settings">...</div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                    <span class="pull-right">
                        <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                        <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    </span>
                </div>

            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Terug naar overzicht", "Index") |
    @Html.ActionLink("Nieuwe Afspraak","Create","Appointment",new {Id = Model.Customer.Id},null)
</p>
